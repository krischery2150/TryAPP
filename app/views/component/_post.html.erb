<div class="panel panel-default post-form-panel">
  <div class="panel-body row">

      <div class="col-sm-1">
        <img src="/profile.png" class="rounded-image" height="35px" width="35px">
      </div>
      <div class="col-sm-11">
        <%= form_for(@newPost) do |f| %>
          <center>
            <div class="field" style="margin-left: 15px" >
              <%= f.text_field :content, autofocus: true, class: "form-control"%>
            </div>
            <div class="actions">
              <span type="button" style="float: right; margin-top: 3px;"><%= f.submit "Add Post", class: "btn btn-primary" %></span>
            </div>
          </center>
        <% end %>
      </div>
      <div class="col-sm-12">

      </div>
  </div>
</div>
