
<div class="row">
    <div class="col-xs-3">
      <div class="panel panel-default">
         <div class="panel-image hide-panel-body">
           <img src="/banner.jpeg" class="panel-image-preview">
        </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-sm-2"><img src="/profile.png" height="50px" width="50px" class="rounded-image home-avatar"></div>
          <div class="col-sm-10"><h4><%=current_user.username%></h4></div>
          <div class="col-sm-12" style="margin-top:10px">
            <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">Posts<br>
                <h6 style="color: #0084B4; font-size: 200%;"><%= current_user.posts.count %></h6>
              </div>
           <div class="col-sm-6" style="font-size: 80%; opacity: 0.7;">FOLLOWERS<br>
             <h6 style="color: #0084B4; font-size: 200%;">10</h6>
           </div>
         </div>
      </div>
    </div>
  </div>


  <div class="panel panel-default">
    <div class="panel-body">
       <h5 style="color: grey; font-size: 125%;">Trends</h5>
        <a href="">#Trend #1</a><br>
          <span style="color: grey;">31k Posts</span><br><br>
        <a href="">#Trend #2</a><br>
          <span style="color: grey;">25k Posts</span><br><br>
        <a href="">#Trend #3</a><br>
          <span style="color: grey;">16k Posts</span><br><br>
    </div>
  </div>
</div>
  <div class="col-xs-6">
      <%= render '/component/post' %><br><br>

      <% for @p in @posts %>
        <div class="panel panel-default post-panel">
          <div class="panel-body row">
              <div class="col-sm-1">
                <img src="/profile.png" class="rounded-image" height="50px" width="50px">
              </div>
              <div class="col-sm-11">
                    <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username%></span><span class='post-creation'><%=@p.created_at.to_formatted_s(:time)%></span></p>
                    <p class="post-content"><%= @p.content %></p>
              </div>
              <div class="col-sm-12">
                  <p class="post-links">
                    <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-share-alt g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-refresh g-links" aria-hidden="true"></span>
                    <a href="">View conversation</a>

                  </p>
              </div>
          </div>
        </div>

        <% end %>
  </div>
  <div class="col-sm-12">
        <center><img src="/social-media.png" height="25px" width="25px">
          <a href="#top"><p class="opacity: 0.7; color: grey;">Back to Top<span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a>
        </center>

      </p>
  </div>

      <div class="col-xs-3 col-xs-offset-9 about-panel">
          <div class="panel panel-default ">
            <div class="panel-body">
              <p style="opacity: 0.5; font-size: 90%">About  Help  Blog  Status  Jobs  Terms  Privacy  Cookies  Ads  Info  Brand  Advertise 2016  TryApp</p>
            </div>
          </div>
      </div>
  </div>
